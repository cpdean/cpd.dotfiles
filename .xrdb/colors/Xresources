#include "/home/conrad/.xrdb/colors/shizuru_pls"

URxvt.font: xft:Ubuntu Mono:size=14
URxvt.boldFont: xft:Ubuntu Mono:style=bold:size=16

*scrollBar: false

! this is a hotkey that puts urxvt in a Weird Mode. I don't like it (because I don't understand it)
URxvt.iso14755: False
URxvt.iso14755_52: False


! perl scripts that extend urxvt found in 
! /usr/lib/x86_64-linux-gnu/urxvt/perl/selection-to-clipboard
! and
! ~/.urxvt/ext/
URxvt.perl-ext-common: default,matcher,clipboard,keyboard-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.underlineURLs: true
URxvt.matcher.button: 1


URxvt.clipboard.copycmd: xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

!! Control-Shift-C for copy
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
! wait... but visual-block in vim
!URxvt.keysym.Control-v: perl:clipboard:paste
!

URxvt.keysym.M-Escape: perl:keyboard-select:activate
! make keyboard-select copy stuff to the "clipboard" instead of "primary"
URxvt.keyboard-select.clipboard: true
